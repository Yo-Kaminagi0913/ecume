<h1 class="sr-only">Favorites</h1>
<ul class="divide-y divide-gray-200">
  <% @favorite_posts.each do |post| %>
    <% item = OpenStruct.new(title: post.content.truncate(20), subtitle: time_ago_in_words(post.created_at) + 'å‰') %>
    <%= render partial: "post_item", locals: { item: item } %>
  <% end %>
</ul>